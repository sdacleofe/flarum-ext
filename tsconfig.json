{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "outDir": "dist-typings",
    "baseUrl": ".",
    "paths": {
      "flarum/*": ["./typings/flarum/*"]
    }
  },
  "include": [
    "src/**/*",
    "js/src/**/*",
    "typings/**/*"
  ]
}
