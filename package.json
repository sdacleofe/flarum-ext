{
  "name": "flarum-rich-text-editor",
  "version": "1.0.0",
  "description": "Custom Rich Text Editor Extension for Flarum",
  "main": "js/dist/forum.js",
  "scripts": {
    "dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "build:typings": "tsc && api-extractor run --local --verbose",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit",
    "clean": "rimraf js/dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sdacleofe/flarum-ext.git"
  },
  "keywords": [
    "flarum",
    "extension",
    "rich-text-editor"
  ],
  "author": "sdacleofe",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/mithril": "^2.0.0",
    "babel-loader": "^10.0.0",
    "flarum-webpack-config": "^2.0.0",
    "prettier": "^3.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@toast-ui/editor": "^3.2.2",
    "medium-editor": "^5.23.3",
    "quill": "^1.3.7"
  }
}
