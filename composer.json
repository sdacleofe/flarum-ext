{
    "name": "your-vendor/rich-text-editor",
    "description": "Custom Rich Text Editor for Flarum",
    "keywords": [
        "flarum",
        "extension",
        "rich-text",
        "editor"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8.0"
    },
    "require-dev": {
        "flarum/testing": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\RichTextEditor\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Rich Text Editor",
            "category": "feature",
            "icon": {
                "name": "fas fa-edit",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": ""
        }
    }
}
