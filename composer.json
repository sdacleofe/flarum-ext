{
    "name": "sdacleofe/flarum-rich-text-editor",
    "description": "Custom Rich Text Editor Extension for Flarum",
    "keywords": [
        "flarum",
        "extension",
        "rich-text",
        "editor",
        "wysiwyg",
        "quill"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "sdacleofe",
            "email": "your-email@example.com"
        }
    ],
    "support": {
        "issues": "https://github.com/sdacleofe/flarum-ext/issues",
        "source": "https://github.com/sdacleofe/flarum-ext"
    },
    "require": {
        "flarum/core": "^1.8.0",
        "php": "^8.0"
    },
    "require-dev": {
        "flarum/testing": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Sdacleofe\\RichTextEditor\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Rich Text Editor",
            "category": "feature",
            "icon": {
                "name": "fas fa-edit",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
